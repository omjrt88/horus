<div class="container">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <h1 class="text-center login-title">Register on Eye of Horus</h1>
            <div class="account-wall">
                <img class="profile-img" src="/assets/images/Eye_of_Horus.png"
                    alt="">
                <form class="form-signin" {{action "register" on="submit"}}>
                      {{#if showErrorMsg}}
                        <div class="alert alert-danger" role="alert">
                          {{errorMsg}}
                        </div>
                      {{/if}}
                      {{input value=name type="text" class="form-control" placeholder="Name"}}
                      {{input value=lastName type="text" class="form-control" placeholder="LastName"}}
                      {{input value=username class="form-control" type="email" pattern="^[_a-z0-9-]+(\.[_a-z0-9-]+)*@[a-z0-9-]+(\.[a-z0-9-]+)*(\.[a-z]{2,3})$" placeholder="Username"}}
                      {{input value=password
                        class="form-control" type="password"
                        placeholder="Password"
                        pattern="(?=^.{8,}$)((?=.*\d)|(?=.*\W+))(?![.\n])(?=.*[A-Z])(?=.*[a-z]).*$"
                        title="Must contain at least one number and one uppercase  special characters allowed: !-_#.+=*%$@, and at least 8 or more characters"}}

                      {{input value=confirmPassword
                        class="form-control" type="password"
                        placeholder="Confirm Password"
                        pattern="(?=^.{8,}$)((?=.*\d)|(?=.*\W+))(?![.\n])(?=.*[A-Z])(?=.*[a-z]).*$"
                        title="Must contain at least one number and one uppercase  special characters allowed: !-_#.+=*%$@, and at least 8 or more characters"}}

                      <button class="btn btn-lg btn-primary btn-block" type="submit">
                        Sign in</button>
                    <div class="need-help">
                      Password hint: BV-API-Challenge
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

{{#if isVisible}}
  {{#ember-wormhole to="modalDestination"}}
    <div class="alert alert-success alert-dismissable fade in">
      <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a> 
      <strong>Success!</strong> Your account was created.
    </div>
  {{/ember-wormhole}}
{{/if}}
{{outlet}}
