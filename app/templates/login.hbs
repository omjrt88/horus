<div class="container">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <h1 class="text-center login-title">Sign in to continue to Eye of Horus</h1>
            <div class="account-wall">
                <img class="profile-img" src="/assets/images/Eye_of_Horus.png"
                    alt="">
                <form class="form-signin" {{action "login" on="submit"}}>
                    {{#if loginFailed}}
                      <div class="alert alert-danger" role="alert">
                        <strong>Oh snap!</strong> Invalid username or password.
                      </div>
                    {{/if}}
                      {{input value=username class="form-control" type="email" pattern="^[_a-z0-9-]+(\.[_a-z0-9-]+)*@[a-z0-9-]+(\.[a-z0-9-]+)*(\.[a-z]{2,3})$"}}
                      {{input value=password
                        class="form-control" type="password"
                        pattern="(?=^.{8,}$)((?=.*\d)|(?=.*\W+))(?![.\n])(?=.*[A-Z])(?=.*[a-z]).*$"
                        title="Must contain at least one number and one uppercase  special characters allowed: !-_#.+=*%$@, and at least 8 or more characters"}}
                      <button class="btn btn-lg btn-primary btn-block" type="submit">
                        Sign in</button>
                    <div class="need-help">
                      Password hint: BV-API-Challenge
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{{outlet}}
